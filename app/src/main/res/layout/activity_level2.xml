<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgapp"
    tools:context=".Level2Activity">

    <TextView
        android:id="@+id/textScreen"
        android:layout_marginTop="45dp"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Two"/>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_rounded_corner1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="240dp"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/textQuestion"
            android:textAlignment="center"
            android:textColor="#332FA2"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="Guess Animal in English Language!"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="6dp"/>

    </LinearLayout>

    <TextView
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="18dp"
        android:text="Listen!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnSound"
        android:layout_gravity="center"
        android:background="@drawable/btn_sound_orange"
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="105dp" />

    <EditText
        android:id="@+id/editText"
        android:padding="10dp"
        android:clickable="false"
        android:focusable="false"
        android:textColor="#332FA2"
        android:textSize="32sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_rounded_corner1"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/textTitle"
        android:text="Alphabet"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:id="@+id/layoutParent"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </LinearLayout>

</LinearLayout>